@model IEnumerable<TaskoMask.Application.Core.Dtos.Roles.RoleBasicInfoDto>
@{
}
@if (Model.Count() == 0)
{
    <div id="no-item-alert-area" class="grid-container">
        <div class="alert alert-info">
            <h4>هیچ موردی برای نمایش وجود ندارد</h4>
        </div>
    </div>
}
else
{
    <div class="block-content has-table">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>@Html.LabelFor(model => model.FirstOrDefault().Name)</th>
                        <th>@Html.LabelFor(model => model.FirstOrDefault().CreationTime)</th>
                        <th><label>عملیات</label></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr data-table-row-id="@item.Id">
                            <td> @item.Name </td>
                            <td> @item.CreationTime </td>
                            <td>
                                <div class="btn-group-xs">
                                    <a href="@Url.Action( "update", new { id = item.Id }) " class=" btn btn-primary btn-xs btn-xs-circle">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
}

