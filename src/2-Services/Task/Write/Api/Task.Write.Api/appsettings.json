{
  "EntityFramework": {
    "Connection": "Replace-With-Production-Connection",
    "DatabaseName": "Task_Write_DB",
    "DatabaseType": "SqlServer"
  },
  "Redis": {
    "Connection": "YourServer:YourPort",
    "Password": "Password",
    "KeyNamespace": "TaskoMaskEventStore"
  },
  "Jwt": {
    "Authority": "https://identity.taskomask.ir",
    "Audience": "task.write.api",
    "Policies": [
      {
        "Name": "user-write-access",
        "RequireAuthenticatedUser": true,
        "AllowedScopes": [ "task.write" ]
      }
    ]
  },
  "Swagger": {
    "Title": "TaskoMask Task Write Api Documentation",
    "Version": "v1",
    "IncludeXmlComments": "TaskoMask.Services.Task.Write.Api.xml,TaskoMask.BuildingBlocks.Contracts.xml"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
