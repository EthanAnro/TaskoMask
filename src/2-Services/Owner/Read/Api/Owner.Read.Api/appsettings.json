{
  "MongoDB": {
    "Connection": "mongodb://YourServer:YourPort",
    "DatabaseName": "Owner_Read_DB"
  },
  "Caching": {
    "CacheTimeInMinutes": 60,
    "Enabled": true
  },
  "Jwt": {
    "Authority": "https://identity.taskomask.ir",
    "Audience": "monolith.api",
    "Policies": [
      {
        "Name": "user-full-access",
        "RequireAuthenticatedUser": true,
        "AllowedScopes": [ "monolith.read", "monolith.write" ]
      }
    ]
  },
  "Swagger": {
    "Title": "TaskoMask Api Documentation",
    "Version": "v1",
    "IncludeXmlComments": "TaskoMask.Services.Monolith.Api.xml,TaskoMask.BuildingBlocks.Contracts.xml"
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
