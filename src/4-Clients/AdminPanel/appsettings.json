{
  "Mongo": {
    "Read": {
      "Connection": "mongodb://YourServer:YourPort",
      "DatabaseName": "TaskoMask_ReadDB"
    },
    "Write": {
      "Connection": "mongodb://YourServer:YourPort",
      "DatabaseName": "TaskoMask_WriteDB"
    }

  },
  "Redis": {
    "Connection": "YourServer:YourPort",
    "Password": "Password",
    "KeyNamespace": "TaskoMaskEventStore"
  },
  "Caching": {
    "CacheTimeInMinutes": 60,
    "Enabled": true
  },
  "SuperUser": {
    "Password": "admin#Str0ngPassForpR0duction:)",
    "Email": "admin@TaskoMask.com",
    "DisplayName": "admin"
  },
  "Url": {
    "Website": "http://taskomask.ir",
    "UserPanel": "http://panel.taskomask.ir",
    "AdminPanel": "http://admin.taskomask.ir",
    "UserPanelAPI": "http://api.taskomask.ir",
    "StaticServer": "http://static.taskomask.ir"
  },
  "Authentication": {
    "CookieName": "TaskoMask.Web.AuthCookieAspNetCore",
    "CookieHttpOnly": true,
    "LoginPath": "/account/login",
    "LogoutPath": "/account/logout",
    "ExpireFromMinute": 25,
    "SlidingExpiration": false,
    "AllowRefresh": true
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Exceptions" ],
    "Enrich": [ "WithExceptionDetails" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "Microsoft.Hosting.Lifetime": "Error"
      }
    },
    "Filter": [
      {
        "Name": "ByExcluding",
        "Args": { "expression": "@mt = 'An unhandled exception has occurred while executing the request.'" }
      }
    ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "./logs/Logs.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ]
  }
}
