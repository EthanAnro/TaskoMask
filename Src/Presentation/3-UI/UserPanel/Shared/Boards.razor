@using TaskoMask.Application.Share.Dtos.Workspace.Boards

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <b>There isn't any board yet!</b>
        <hr>
        <small>
            You can add new board by using
            <b>
                <a @onclick="@(()=>ShowCreateModal())" class="text-info">
                    <i class="bi bi-clipboard-plus"></i>
                    New Board
                </a>
            </b>
            item from the top right menue
            <i class="bi bi bi-plus-circle"></i>
            . But make sure you have a project
        </small>
    </div>
}
else
{
    foreach (var item in Model)
    {
        <div class="col-md-4 col-sm-12 ">
            <div class="card bg-primary text-white">
                <h5 class="card-header">
                    @item.Name
                    <a @onclick="@(()=>ShowUpdateModal(item.Id))" class="text-warning" title="Edit">
                        <i class="bi bi-pencil"></i>
                    </a>
                </h5>
                <a href="@($"/board/{item.Id}")">
                    <div class="card-body text-white">
                        <small>@item.Description</small>
                    </div>
                </a>
            </div>
        </div>
    }

}



@code {


    [Parameter]
    public IEnumerable<BoardBasicInfoDto> Model { get; set; }


    [Parameter]
    public string ProjectId { get; set; }


    [Parameter]
    public string OrganizationId { get; set; }


    /// <summary>
    ///
    /// </summary>
    private void ShowCreateModal()
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(Pages.Boards.Components.CreateBoard.ProjectId), ProjectId);
        parameters.Add(nameof(Pages.Boards.Components.CreateBoard.OrganizationId), OrganizationId);
        ModalService.Show<Pages.Boards.Components.CreateBoard>("Create board", parameters, new ModalOptions { DisableBackgroundCancel = true });
    }


    /// <summary>
    ///
    /// </summary>
    private void ShowUpdateModal(string boardId)
    {
        var parameters = new ModalParameters();
        parameters.Add(nameof(Pages.Boards.Components.UpdateBoard.Id), boardId);
        ModalService.Show<Pages.Boards.Components.UpdateBoard>("Update board", parameters, new ModalOptions { DisableBackgroundCancel = true });
    }
}
