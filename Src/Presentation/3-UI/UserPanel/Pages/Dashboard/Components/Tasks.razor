@using TaskoMask.Application.Share.Dtos.Workspace.Tasks


@if (!Model.Any())
{
    <div class="alert alert-warning">
        <b>There isn't any doing task!</b>
        <hr>
        <small>If you add a task to Doing cards you can see its shortcut here</small>
    </div>
}
else
{
    foreach (var item in Model)
    {
    <div class="col-md-6 col-sm-12 col-12 p-2">
            <NavLink href="@($"/board/{item.BoardId}/task/{item.Id}")">
                <div class="card bg-warning text-dark">
                    <div class="card-body p-3 mh overflow-hidden">
                        @item.Title
                    </div>
                </div>
            </NavLink>
        </div>
    }

}



@code {
    [Parameter]
    public IEnumerable<TaskBasicInfoDto> Model { get; set; }
}
