@using TaskoMask.Application.Core.Dtos.Team.Members

@foreach (var item in Model)
{
    <div class="col-md-4 col-sm-12 ">
        <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="@defaultUserImgUrl" alt="Card image cap">
            <div class="card-body">
                <h5 class="card-title">@item.DisplayName</h5>
                <p class="card-text">@item.Email</p>
                <a href="#" class="btn btn-sm btn-primary">Email</a>
                <a href="#" class="btn btn-sm btn-warning">Permissions</a>
                <a href="#" class="btn btn-sm btn-danger">Remove</a>
            </div>
        </div>
    </div>
}
@code {

    private string defaultUserImgUrl = "/content/admin/img/default-user.png";

    [Parameter]
    public IEnumerable<MemberBasicInfoDto> Model { get; set; }
}
